## fed funcname       -- edit function
fed () {
	local FUNDIR=~/functions
	local FF=$FUNDIR/f-$1

	[ $1 ] || { echo "fed: missing function_name"; return 1; }
	mkdir -p $FUNDIR
	declare -f $1 >$FF   # grab function
	vi $FF               # edit
	. $FF                # re-inplement
}

