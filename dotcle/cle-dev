#
# functions to assist CLE development process
#

_cle_ed () {
	vi $CLE_RC
}

_cle_ls () {
	ls -l $HOME/.aliases* $HOME/.cle*
}

_cle_env () {
	( set -o posix; set|grep CLE_)
}

_cle_clean () {
	read -p "Cleaning CLE settings, are you sure? (y/N)  "
	[ "$REPLY" != 'y' ] && return
	unalias -a
	rm -f $CLE_ALIASES $CLE_PROMPT ~/.clerc_local
	cle reload
}

cdc () { cd ~/d/cle; }

