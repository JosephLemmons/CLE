## cfe shortcut|filename
cfe () {
	local R
	case "$1" in
	help)	cle help mod-cfe;;
	usr)	## cfe usr      -- vi ~/.cleusr-$CLE_USER
		vi ~/.cleusr-$CLE_USER
		R=1 ;;
	lcl)	## cfe lcl      -- vi ~/.clerc-local
		vi ~/.clerc-local
		R=1 ;;
	cf)	## cfe cf       -- vi ~/.clecf-$CLE_USER
		vi ~/.clecf-$CLE_USER
		R=1 ;;
	sshcf)	## cfe sshcf    -- vi ~/.ssh/config	
		vi ~/.ssh/config;;
	sshkh)	## cfe sshkh    -- vi ~/.ssh/known_hosts	
		vi ~/.ssh/known_hosts;;
	*)	## cfe any_file -- edits file with path relative to $HOME
		vi ~/$1;;
	esac
	[ "$R" ] && ask "Reload CLE?" && cle reload
}

