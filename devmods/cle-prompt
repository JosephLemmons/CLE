case "$1" in
rh)		## `cle prompt rh`       - RH colorful
	cle p0 '%c3['
	cle p1 '\u@%h'
	cle p2 '\w'
	cle p3 '] \$'
	cle color gGg
	;;
twoline)	 ## `cle prompt twoline`  - two line prompt
	cle p0 '\n %e'
	cle p1 '\u'
	cle p2 '%h ${CLE_IP:+(%i)}'
	cle p3 '\n%cK\A %c3\w \$'
	cle color Ggy
	;;
"")
	cle help "cle prompt"
esac

